{
    "root": true,
    "extends": ["open-xchange-appsuite"],
    "globals": {
        "staticGt": true
    },
    "ignorePatterns": ["node_modules"],
    "rules": {
        "license-header/header": ["error", "./license-header"]
    },
    "plugins": [
        "license-header"
    ],
    "overrides": [
        {
            "files": ["*.conf.js", "Gruntfile.js"],
            "excludedFiles": ["codecept.conf.js"],
            "rules": {
                "license-header/header": "off"
            }
        }
    ]
}
